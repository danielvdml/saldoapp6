<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="report_movimiento">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Reporte de Movimiento</h2>
                            <p><span t-field="o.descripcion"/></p>
                            <span t-field="o.currency_id"/><span t-field="o.monto"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>        

    </data>
</odoo>
